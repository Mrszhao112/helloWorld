#include<stdio.h>
#include<stdlib.h>

void move(char x, char y)
{   //移动打印函数
	printf("%c-->%c\n", x, y);
}

void hanoi(int n, char a, char b, char c)
{
	void move(char x, char y);
	if (n == 1)                         //只剩一层 直接进行移动 a》》》c
	{
		move(a, c);
	}
	else
	{
		hanoi(n - 1, a, c, b);     //对除去下面一层进行汉诺塔操作 将a其他的移动到b上 借助c  
		move(a, c);                //进行最后一层 直接a》》》》c
		hanoi(n - 1, b, a, c);     //目前最多的在b上 需要借助a移动到c上面
	}
}
int main()
{
	int n = 0;
	scanf_s("%d", &n);
	hanoi(n, 'a', 'b', 'c');
	system("pause");
	return 0;
}
